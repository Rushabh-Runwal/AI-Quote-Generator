# Frontend Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000

# Environment
NEXT_PUBLIC_ENV=development

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=your_google_analytics_id
# NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_MODE=true
NEXT_PUBLIC_ENABLE_PDF_DOWNLOAD=true

# UI Configuration
NEXT_PUBLIC_APP_NAME="Legal Quote System"
NEXT_PUBLIC_COMPANY_NAME="Your Law Firm"

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=contact@example.com
NEXT_PUBLIC_CONTACT_PHONE=(555) 123-4567

# Social Media (Optional)
# NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourlawfirm
# NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourlawfirm

# Error Tracking (Optional)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# CDN Configuration (Optional)
# NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com
